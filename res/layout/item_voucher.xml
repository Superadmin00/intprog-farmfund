<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="2dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView android:id="@+id/voucherCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50\nPoints"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15sp"
            android:background="@drawable/element_right_border"
            android:paddingEnd="10dp"
            android:layout_centerVertical="true"/>

        <ImageView android:id="@+id/voucherBrandLogo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_globe_logo"
            android:layout_toEndOf="@id/voucherCost"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <CheckBox android:id="@+id/voucherCheckBox"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="0dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView android:id="@+id/voucherTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50 Globe Credits"
            android:fontFamily="@font/poppins_bold"
            android:textSize="13sp"
            android:layout_toEndOf="@id/voucherBrandLogo"
            android:layout_toStartOf="@id/voucherCheckBox"/>

        <TextView android:id="@+id/voucherDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For only 50 FundPoints, get 50 Globe Prepaid credits."
            android:fontFamily="@font/poppins_semibold"
            android:textSize="11sp"
            android:layout_toStartOf="@id/voucherCheckBox"
            android:layout_toEndOf="@id/voucherBrandLogo"
            android:layout_below="@id/voucherTitle"/>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>