<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fundPointsDetailsLayout"
    android:background="@drawable/bg_rounded_corners"
    android:padding="10dp"
    android:backgroundTint="@color/blue">

    <ImageView android:id="@+id/vouchProfilePic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_default_pfp"
        android:background="@drawable/bg_gradient"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:layout_marginEnd="10dp"/>

    <TextView android:id="@+id/vouchProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guest User"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:layout_toEndOf="@id/vouchProfilePic"/>

    <ImageView android:id="@+id/fundPointsIcon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_fundpoints"
        android:layout_toEndOf="@id/vouchProfilePic"
        android:layout_below="@id/vouchProfileName"/>

    <TextView android:id="@+id/fundPointsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:layout_toEndOf="@id/fundPointsIcon"
        android:layout_below="@id/vouchProfileName"
        android:layout_marginStart="3dp"/>

    <TextView android:id="@+id/textView123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current FundPoints"
        android:textSize="15sp"
        android:textColor="@color/grey"
        android:fontFamily="@font/poppins_semibold"
        android:layout_toEndOf="@id/fundPointsIcon"
        android:layout_below="@id/fundPointsCount"
        android:layout_marginStart="3dp"/>

</RelativeLayout>