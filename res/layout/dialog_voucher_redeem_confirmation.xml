<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLogo"
            android:fontFamily="@font/poppins_bold"
            android:text="Voucher Redemption Confirmation"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_bold"
            android:text="Are you sure to redeem these vouchers?"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:fontFamily="@font/poppins_bold"
            android:text="Vouchers"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/vouchersToRedeemList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:background="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"
            android:padding="0dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vouchersToRedeemList"
            android:fontFamily="@font/poppins_bold"
            android:text="FundPoints Needed"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalFundPointsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:fontFamily="@font/poppins_bold"
            android:text="800.00"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalFundPointsText"
            android:fontFamily="@font/poppins_bold"
            android:text="Current FundPoints"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/currentFundPointsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:fontFamily="@font/poppins_bold"
            android:text="900"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/confirmRedemptionBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currentFundPointsText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Confirm"
            android:textColor="@color/green"
            android:textSize="20sp"
            app:backgroundTint="@color/white" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>