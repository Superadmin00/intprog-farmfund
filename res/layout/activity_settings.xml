<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_gradient_roundedbottom"
        android:padding="15dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:padding="10dp"
            android:rotationY="180"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow" />

        <RelativeLayout
            android:id="@+id/headerSubContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/logo"
                android:fontFamily="@font/poppins_bold"
                android:text="Settings"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/settingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_gradient_rounded_nolines"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <RelativeLayout
            android:id="@+id/accountPrefLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_rounded_corners"
            android:backgroundTint="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Account Preferences"
                android:textSize="15sp"/>

            <ImageButton
                android:id="@+id/nextimage1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/green"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/notifPrefLayout"
            android:layout_below="@+id/accountPrefLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_rounded_corners"
            android:backgroundTint="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Notification Preferences"
                android:textSize="15sp"/>

            <ImageButton
                android:id="@+id/nextimage2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/green"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/securityPrefLayout"
            android:layout_below="@+id/notifPrefLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_rounded_corners"
            android:backgroundTint="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Security Preferences"
                android:textSize="15sp"/>

            <ImageButton
                android:id="@+id/nextimage3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/green"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/languagePrefLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/securityPrefLayout"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_rounded_corners"
            android:backgroundTint="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Language Preferences"
                android:textSize="15sp"/>

            <ImageButton
                android:id="@+id/nextimage4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/green"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>